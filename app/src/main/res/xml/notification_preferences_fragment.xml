                    android:key="@string/key_pick_sync_time"/>
        <CheckBoxPreference
            android:key="@string/key_only_wifi"
            android:title="@string/title_only_wifi"
            android:summary="@string/summary_only_wifi" />
    </PreferenceCategory>
</PreferenceScreen>